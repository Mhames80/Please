@model IEnumerable<BackupProject.Models.RaceCars>

@{
    ViewData["Title"] = "Index";
}
<head>
    <style>
        h2, .h2
        {
            text-align: center;
            font-size: 80px;
            background-color:rgb(0, 38, 255);opacity:0.8;

        }
        .table{
            width:100%;
            
            background-color:rgb(0, 38, 255);opacity:0.8;
            
        }
          

    </style>
</head>

<div><h2>Race Cars</h2></div>

<p>
    <a asp-action="Create">Create New</a>
</p>

       
        <table class="table">
            <thead class="list-group list-group-flush">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Make)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>

        <th></th>
    </tr>
</thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="list-group list-group-flush">
<td>
                            @Html.DisplayFor(modelItem => item.Make)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Model)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@item.RaceCarsId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.RaceCarsId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.RaceCarsId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
  

