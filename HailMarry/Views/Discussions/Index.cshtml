@model IEnumerable<BackupProject.Models.Discussion>

@{
    ViewData["Title"] = "Index";
}

<h2>Disscussion Board</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscussionContactInfo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscussionContactInfo.FirstName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DiscussionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DiscussionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DiscussionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
